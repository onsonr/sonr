@go.Package { name = "github.com/onsonr/sonr/pkg/common/types" }

module common.types.Ctx

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.5.0#/go.pkl"
import "./DWN.pkl"

class JsonField extends go.Field {
  structTags {
    ["json"] = "%{name},omitempty"
  }
}

/// Client configuration
class ClientConfig {
  chainID: String
  ipfsHost: String
  sonrAPIURL: String
  sonrRPCURL: String 
  sonrWSURL: String
}

/// Peer information
class PeerInfo {
  id: String
  challenge: String // Using String for URLEncodedBase64
}

/// Browser information
class BrowserInfo {
  name: String
  version: String
}

/// User agent information
class UserAgent {
  architecture: String
  bitness: String
  browser: BrowserInfo?
  model: String
  platformName: String
  platformVersion: String
  isMobile: Boolean
}

/// Vault details
class VaultDetails {
  schema: DWN.Schema? // Reference to external VaultSchema type
  address: String
}



