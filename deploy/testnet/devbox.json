{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": {
    "go": "1.23",
    "bun": "latest",
    "ipfs": "latest",
    "skate": "latest",
    "cloudflared": "latest",
    "go-task": "latest",
    "tigerbeetle": "latest",
    "matrix-synapse": {
      "version": "latest",
      "excluded_platforms": [
        "aarch64-darwin"
      ]
    }
  },
  "env": {
    "GOPATH": "$HOME/go",
    "PATH": "./build:$HOME/go/bin:$PATH",
    "CHAIN_ID": "sonr-testnet-1",
    "DENOM": "usnr",
    "KEYRING": "test",
    "MONIKER": "florence",
    "BINARY": "sonrd",
    "ACC0_NAME": "acc0",
    "ACC1_NAME": "acc1",
    "ACC0_ADDRESS": "idx1efd63aw40lxf3n4mhf7dzhjkr453axur9vjt6y",
    "ACC1_ADDRESS": "idx1hj5fveer5cjtn4wd6wstzugjfdxzl0xpecp0nd",
    "ACC0_MNEMONIC": "$(skate get ACC0_MNEMONIC)",
    "ACC1_MNEMONIC": "$(skate get ACC1_MNEMONIC)",
    "TUNNEL_TOKEN": "$(skate get CLOUDFLARE_TUNNEL_TOKEN)"
  },
  "shell": {
    "init_hook": [
      "export ROOT=$(git rev-parse --show-toplevel)"
    ],
    "scripts": {
      "sonr": [
        "cd $ROOT",
        "make sh-testnet"
      ],
      "ipfs": [
        "cd $ROOT",
        "make setup-ipfs",
        "ipfs daemon"
      ]
    }
  }
}
