{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.22",
    "bun@latest",
    "gum@latest",
    "ipfs@latest",
    "skate@latest",
    "air@latest",
    "go-task@latest",
    "templ@latest",
    "tigerbeetle@latest",
    "process-compose@latest"
  ],
  "env": {
    "GOPATH": "$HOME/go",
    "PATH": "./build:$HOME/go/bin:$PATH",
    "CHAIN_ID": "sonr-testnet-1",
    "DENOM": "usnr",
    "KEYRING": "test",
    "MONIKER": "florence",
    "BINARY": "sonrd",
    "ACC0_NAME": "acc0",
    "ACC1_NAME": "acc1",
    "ACC0_ADDRESS": "idx1efd63aw40lxf3n4mhf7dzhjkr453axur9vjt6y",
    "ACC1_ADDRESS": "idx1hj5fveer5cjtn4wd6wstzugjfdxzl0xpecp0nd",
    "ACC0_MNEMONIC": "$(skate get ACC0_MNEMONIC)",
    "ACC1_MNEMONIC": "$(skate get ACC1_MNEMONIC)",
    "TUNNEL_TOKEN": "$(skate get CLOUDFLARE_TUNNEL_TOKEN)",
    "TURNSTILE_SITE_KEY": "$(skate get TURNSTILE_SITE_KEY)",
    "TEMPL_EXPERIMENT": "rawgo"
  },
  "shell": {
    "scripts": {
      "deploy": [
        "gum spin --title='Generating PKL' -- make pkl-gen",
        "gum spin --title='Building Motr WASM' -- make motr-build",
        "gum spin --title='Uploading to Bucket' -- make deploy-cdn"
      ],
      "devnet": [
        "process-compose up -f deploy/devnet/process-compose.yaml --no-server --detached --log-file ./sonr.log --hide-disabled"
      ],
      "testnet": [
        "process-compose run -f deploy/testnet/process-compose.yaml --no-server --detached --log-file ./sonr.log --hide-disabled"
      ]
    }
  }
}
