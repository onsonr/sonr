{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": {
    "postgresql": "latest",
    "tigerbeetle": "latest",
    "ipfs": "latest"
  },
  "env": {
    "HOME": "$HOME",
    "GOPATH": "$HOME/go",
    "GOBIN": "$GOPATH/bin",
    "PATH": "$GOBIN:$PATH",
    "POWERLEVEL9K_DISABLE_CONFIGURATION_WIZARD": "true",
    "ROOT": "$(git rev-parse --show-toplevel)"
  },
  "shell": {
    "init_hook": [],
    "scripts": {
      "init": [
        "task init:psql",
        "task init:ipfs"
      ]
    }
  }
}
