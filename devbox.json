{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.5/.schema/devbox.schema.json",
  "packages": [
    "buf@latest",
    "docker@latest",
    "go_1_21@latest",
    "ipfs@latest",
    "templ@latest",
    "dendrite@latest",
    "doppler@latest",
    "mods@latest",
    "gum@latest",
    "golangci-lint@latest",
    "neovim@latest"

  ],
  "env": {
    "GOPATH": "$HOME/go",
    "PATH": "$HOME/go/bin:$PATH"
  },
  "shell": {
    "scripts": {
      "proto": ["make proto-gen"],
      "templ": ["templ generate"],
      "ps": ["devbox services ls"]
    }
  }
}
