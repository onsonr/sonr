{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "bun@latest",
    "gum@latest",
    "ipfs@latest",
    "skate@latest",
    "air@latest",
    "go-task@latest",
    "templ@latest",
    "tigerbeetle@latest",
    "process-compose@latest"
  ],
  "env": {
    "TEMPL_EXPERIMENT": "rawgo"
  },
  "shell": {
    "scripts": {
      "deploy": [
        "gum spin --title='Generating PKL' -- make pkl-gen",
        "gum spin --title='Generating Styles' -- make tailwind-gen",
        "gum spin --title='Building Motr WASM' -- make motr-build",
        "gum spin --title='Uploading to Bucket' -- make deploy-cdn"
      ],
      "devnet": [
        "process-compose up -f deploy/devnet/process-compose.yaml"
      ],
      "testnet": [
        "process-compose run -f deploy/testnet/process-compose.yaml"
      ]
    }
  }
}
