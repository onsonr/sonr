{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "buf@latest",
    "go@latest",
    "docker@latest",
    "gum@latest",
    "go-task@latest",
    "goreleaser@latest",
    "commitizen@latest",
    "doppler@latest"
  ],
  "env": {
    "GOPATH": "$PWD",
    "PATH": "$PATH:$PWD/bin",
    "DOPPLER_TOKEN": "$DOPPLER_TOKEN",
    "GITHUB_TOKEN": "$(doppler secret -g github_token)",
    "GITLAB_TOKEN": "$(doppler secret -g gitlab_token)"
  },
  "shell": {
    "init_hook": [
      "gh extension install valeriobelli/gh-milestone"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
