package views

import (
	"github.com/onsonr/sonr/internal/nebula/hero"
	"github.com/onsonr/sonr/internal/nebula/layout"
	"github.com/onsonr/sonr/internal/nebula/text"
)

templ InitialView(isUnavailable bool) {
	if isUnavailable {
		@layout.View("Sonr.ID") {
			@layout.Container() {
				@text.TitleDesc("Sonr.ID", "The decentralized identity layer for the web.")
				@hero.SocialButtonsRow()
			}
		}
	}
	@layout.View("Sonr.ID") {
		@layout.Container() {
			@text.TitleDesc("Sonr.ID", "The decentralized identity layer for the web.")
			@hero.GetStartedButton()
			@hero.SocialButtonsRow()
		}
	}
}
